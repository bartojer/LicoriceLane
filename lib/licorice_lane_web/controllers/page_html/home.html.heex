<.flash_group flash={@flash} />

<div class="min-h-screen bg-gradient-to-br from-purple-50 to-pink-100">
  <div class="px-4 py-16 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-4xl text-center">
      <!-- Logo/Header -->
      <div class="mb-8">
        <h1 class="text-6xl font-bold text-gray-900 mb-4">
          🍭 Licorice Lane
        </h1>
        <p class="text-xl text-gray-600">
          Your premier destination for premium licorice and confections
        </p>
      </div>

      <!-- Navigation Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-16">
        <!-- About Page -->
        <a href="/about" class="group block">
          <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-all duration-300 hover:-translate-y-2">
            <div class="text-4xl mb-4">📖</div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">About Us</h3>
            <p class="text-gray-600">Learn about our story and passion for premium licorice</p>
          </div>
        </a>

        <!-- Inventory Page -->
        <a href="/inventory" class="group block">
          <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-all duration-300 hover:-translate-y-2">
            <div class="text-4xl mb-4">🛍️</div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Shop Inventory</h3>
            <p class="text-gray-600">Browse our extensive collection of licorice varieties</p>
          </div>
        </a>

        <!-- Contact Page -->
        <a href="/contact" class="group block">
          <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-all duration-300 hover:-translate-y-2">
            <div class="text-4xl mb-4">📞</div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Contact Us</h3>
            <p class="text-gray-600">Find our location, hours, and get in touch</p>
          </div>
        </a>

        <!-- FAQ Page -->
        <a href="/faq" class="group block">
          <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-all duration-300 hover:-translate-y-2">
            <div class="text-4xl mb-4">❓</div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">FAQ</h3>
            <p class="text-gray-600">Answers to frequently asked questions</p>
          </div>
        </a>

        <!-- Admin Dashboard -->
        <a href="/admin" class="group block">
          <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-all duration-300 hover:-translate-y-2 border-2 border-brand">
            <div class="text-4xl mb-4">⚙️</div>
            <h3 class="text-xl font-semibold text-brand mb-2">Admin Dashboard</h3>
            <p class="text-gray-600">Manage products, orders, and store settings</p>
          </div>
        </a>

        <!-- Store Features -->
        <div class="bg-gradient-to-br from-brand to-purple-600 rounded-xl shadow-lg p-8 text-white">
          <div class="text-4xl mb-4">✨</div>
          <h3 class="text-xl font-semibold mb-2">Premium Quality</h3>
          <p class="text-purple-100">Hand-selected licorice from artisan producers worldwide</p>
        </div>
      </div>

      <!-- Quick Stats -->
      <div class="mt-16 bg-white rounded-xl shadow-lg p-8">
        <h3 class="text-2xl font-bold text-gray-900 mb-6">Why Choose Licorice Lane?</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <div class="text-3xl font-bold text-brand mb-2">100+</div>
            <p class="text-gray-600">Unique Varieties</p>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-brand mb-2">35+</div>
            <p class="text-gray-600">Years Experience</p>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-brand mb-2">★★★★★</div>
            <p class="text-gray-600">Customer Reviews</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
